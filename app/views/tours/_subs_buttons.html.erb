<script type="text/javascript">
// for modal popup on join
    $(function () {
        $("#join").click(function (e) {
          e.preventDefault();
            $("#myModal").modal('show');
        });

        $('#myModal').on('hidden', function () {
          document.location.reload();
        })

    });
</script>
