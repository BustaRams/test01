<% if current_user.tours_users.active.where(tour: @tour).first.present? %>
    <% if current_user.tours_users.where(tour: @tour, kicked: true).first.present? %>

    <% else %>
    <%= link_to 'Leave', tours_unsubscribe_path(id: @tour.id), method: :post, class: 'line-btn', role: 'button' %>
    <% end%>
<%else%>
<!-- Hide button form superuser -->
<% if current_user.is_superuser == true%>
<% else%>
    <%= link_to 'Join', "#", class: 'line-btn', role: 'button', id: 'join' %>
    <div id="dialog" style="display: none">
  </div>
<% end %>
<% end%>
<div id="myModal" class="modal fade" role="dialog">
  <div class="modal-dialog">

    <!-- Modal content-->
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">Voyajers</h4>
      </div>
      <div class="modal-body">
        <p>Welcome.</p>
      </div>
      <div class="modal-footer">
        <%= link_to "OK", tours_subscribe_path(id: @tour.id), method: :post ,class: 'line-btn'%>
      </div>
    </div>

  </div>
</div>



