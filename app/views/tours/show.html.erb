<p>
  <strong>Name:</strong>
  <%= @tour.name %>
</p>

<p>
  <strong>Description:</strong>
  <%= @tour.description %>
</p>

<p>
  <strong>Owner:</strong>
  <%= @tour.owner.Last_name %>
</p>

<p>
  <strong>Start time:</strong>
  <%= @tour.start_time %>
</p>

<p>
  <strong>Category:</strong>
  <%= @tour.category.name %>
</p>

<% if current_user.tours_users.acive.where(tour: @tour).first.present? %>
    <%= link_to 'Unsubscribe', tours_unsubscribe_path(id: @tour.id), method: :post%>
<% elsif current_user.tours_users.where(tour: @tour, kicked: true).first.present? %>

<%else%>
    <%= link_to 'Subscribe', tours_subscribe_path(id: @tour.id), method: :post%>
<% end %>
<%= link_to 'Edit', edit_tour_path(@tour) %> |
<%= link_to 'Back', tours_path %>
