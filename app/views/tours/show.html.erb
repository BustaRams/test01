<div class="row">
  <div class="col-sm-12">
    <h1> <%= @tour.name %> </h1>
  </div>
</div>

<div class="row custom-borders">
  <div class="col-sm-6">
    <%= render 'tours/members' %>
  </div>

  <div class="col-sm-6 center-text">
    <%= image_tag @tour.tour_img.url(:grande_img), class: "grande-img image-borders" %>
    <div class="row">
      <div class="col-sm-12 center-text paddings">
        <% if @tour.owner != current_user %>
            <%= render 'tours/subs_buttons' %>
        <% else %>
            <% if @tour.locked? %>
                <%= link_to 'Unlock the tour', tours_unlock_path(@tour), method: :post, class: 'btn btn-sm btn-info', role: 'button' %>
            <% else %>
                <%= link_to 'Lock the tour', tours_lock_path(@tour), method: :post, class: 'btn btn-sm btn-info', role: 'button' %>
            <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>

<div class="row custom-borders">
  <div class="col-sm-12">
    <h3>General Information</h3>
    <div class="general-info">
      <p>
        <strong>Description:</strong>
        <%= @tour.description %>
      </p>
    </div>
    <p>
      <strong>Owner:</strong>
      <%= @tour.owner.Last_name %>
    </p>

    <p>
      <strong>Start time:</strong>
      <%= @tour.start_time.strftime('%H:%M:%S %d %B %Y') %>
    </p>

    <p>
      <strong>Category:</strong>
      <%= @tour.category.name %>
    </p>
  </div>
</div>

<% if @allowed_user %>
    <div class="row custom-borders">
      <div class="col-sm-6">
        <%= render 'tours/ideas_board' %>

        <% if @tour.owner == current_user %>
            <%= render 'tours/owner_ideas_board' %>
        <% end %>
      </div>

      <div class="col-sm-6">
        <%= render 'tours/chat' %>
      </div>
    </div>
<% end %>

<%= link_to 'Edit', edit_tour_path(@tour) %> |
<%= link_to 'Back', tours_path %>