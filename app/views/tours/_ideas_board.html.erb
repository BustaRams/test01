<h3>Ideas board</h3>

<% if @ideas.all.present? %>
<table class="table table-striped">
  <thead>
  <tr>
    <th>#</th>
    <th>Idea text</th>
    <th colspan="1"></th>
  </tr>
  </thead>
  <tbody>
  <% index = 0 %>
  <% @ideas.each do |idea| %>
      <tr>
        <th scope="row"><%= index += 1 %></th>
        <td><%= idea.text %></td>
        <td><%= link_to('Delete', tours_delete_idea_path(@tour.id, { idea_id: idea.id }), 'data-confirm' => "Are you sure?", method: :delete) if @tour.owner == current_user %></td>
      </tr>
  <% end %>
  </tbody>
</table>
<% end %>

