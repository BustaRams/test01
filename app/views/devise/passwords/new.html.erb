<div class="white-bg pad-block min log-wrap">
    <div class="container">
        <div class="main-title">
            <h1>Forget Password</span></h1>
        </div>
        <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
          <%= f.error_notification %>
          <div class="frm-wrap">
                <div class="gray-box">
                    <div class="frm-line">
                        <div class="frm-full">
                            <div class="form-group">
                                <%= f.input :email, required: false, autofocus: true  ,class:'form-control'%>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="clearfix"></div>
                <div class="btn-wrap mar">
                  <%= f.button :submit, "Send me reset password instructions" , { class: 'btn btn-primary' }  %>
            </div>
            <% end %>
    </div>
  </div>
</div>
