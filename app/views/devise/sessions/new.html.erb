<div class="white-bg pad-block min log-wrap">
    <div class="container">
        <div class="main-title">
            <h1>Sign <span>in</span></h1>
            <p class="tag">Fill the form of login for pintimes control panel, New user? <%= link_to "Create An Account", new_user_registration_path,class:"link" %></p>
        </div>
          <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name) ,class:'login-frm') do |f| %>
            <div class="frm-wrap">
                <div class="gray-box">
                    <div class="frm-line">
                        <div class="frm-full">
                            <div class="form-group">
                                <%= f.input :email, required: false, autofocus: true  ,class:'form-control' , placeholder:"Email"%>
                            </div>
                        </div>
                    </div>
                    <div class="frm-line">
                        <div class="frm-full">
                            <div class="form-group">
                                <%= f.input :password, required: false , class:'form-control' , placeholder:'Password'%>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="checkbox remember">
                  <%= f.label :remember_me do %>
                      <%= f.check_box :remember_me %>
                      <span></span>Remember me
                  <% end %>
                </div>
                <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
                  <%= link_to "Forgot your password?", new_password_path(resource_name) ,class:"link forgot" %><br />
                <% end -%>
                <div class="clearfix"></div>
                <div class="btn-wrap mar">
                  <%= f.button :submit, "Log in", { class: 'fill-btn' } %><br>
                </div>
                <p class="confirm-line">
                  <%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
                  <%= link_to "Didn't receive confirmation?", new_confirmation_path(resource_name) %><br />
                  <% end -%>
                </p>
            <% end %>
    </div>
  </div>
</div>
<script>
    $(window).scroll(function() {
        if ($(this).scrollTop() > 1){
            $('header').addClass("sticky");
            $('body').addClass("sticky-b");
        }
        else{
            $('header').removeClass("sticky");
            $('body').removeClass("sticky-b");
        }
    });
</script>
